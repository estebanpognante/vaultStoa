service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // STRICT MODE: Only allow specific UIDs as per specification.
      // REPLACE 'UID_USER_1', 'UID_USER_2' with actual User IDs from Firebase Auth.
      allow read, write: if request.auth.uid in ['UID_USER_1', 'UID_USER_2'];
    }
  }
}
